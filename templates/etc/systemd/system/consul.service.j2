[Unit]
Description=consul agent
Requires=network-online.target
After=network-online.target

[Service]
User={{ consul_agent_user_info.user }}
Group={{ consul_agent_user_info.group }}
Environment=GOMAXPROCS=2
Restart=on-failure
ExecStart={{ consul_agent_install_dir }}/consul agent $OPTIONS -config-file={{ consul_agent_config_dir }}/config.json -config-dir={{ consul_agent_config_dir }}/client
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target
